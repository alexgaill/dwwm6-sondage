{% extends 'base.html.twig' %}

{% block title %}Hello SondageController!{% endblock %}

{% block body %}
    <div class="mt-5">
        <h1>Liste des sondages</h1>

        <table class="table table-stripped table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Titre du sondage</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for sondage in sondages %}
                    <tr>
                        <td>{{sondage.id}}</td>
                        <td>{{sondage.titre}}</td>
                        <td><a href={{ path("sondage_single", {id:sondage.id}) }}><button class="btn btn-success">Voir le sondage</button></a></td>
                    </tr>
                {% else %}
                    <tr>
                        <td class="text-warning text-center" colspan="3">Il n'y a pas de sondage pour le moment.</td>
                    </tr>
                {% endfor %}
                <tr>
                    <td colspan="3" class="text-center"><a href={{ path("sondage_new") }}><button class="btn btn-warning">Ajouter un nouveau sondage</button></a></td>
                </tr>
            </tbody>
        </table>
    </div>
{% endblock %}
