{% extends 'base.html.twig' %}

{% block title %}Hello QuestionController!
{% endblock %}

{% block body %}
	<div class="mt-5">
		<h1>Liste des questions</h1>
		<table class="table table-hover table-stripped">
			<thead>
				<tr>
					<th>Id</th>
					<th>Question</th>
					<th>Sondage</th>
					<th>Action</th>
				</tr>
			</thead>
			<tbody>
				{% for question in questions %}
					<tr>
						<td>{{question.id}}</td>
						<td>{{question.titre}}</td>
						<td>{{question.sondage.titre}}</td>
						<td>
							<a href={{ path("question_update", {id:question.id}) }}>
								<button class="btn btn-primary">Modifer</button>
							</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td class="text-warning">Il n'y a pas de questions pour le moment.</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
    <div class="mt-5 col-4 mx-auto">
        {% include "question/_form.html.twig" %}
    </div>
{% endblock %}
