{% extends "base.html.twig" %}

{% block body %}
    <div class="mt-5">
        <h1>{{sondage.titre}}</h1>

        <table class="table table-stripped table-hover">
            <thead>
                <tr>
                    <th>Question</th>
                    <th>RÃ©ponses</th>
                    <th>Score</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for question in sondage.questions %}
                    <tr>
                        <td>{{question.titre}}</td>
                        <td colspan="3">

                            {% for reponse in question.reponses %}
                                {% for bestReponse in best %}
                                    {% if question.id == bestReponse.question_id and reponse.id == bestReponse.reponse_id %}
                                        <tr class="text-success">
                                            <td></td>
                                            <td>{{reponse.titre}}</td>
                                            <td>{{reponse.score}}</td>
                                            <td><a href={{ path("reponse_up", {id:reponse.id, sondage:sondage.id}) }}><button class="btn btn-primary">Choisir</button></a></td>
                                        </tr>
                                        
                                    {% else %}
                                        <tr>
                                            <td></td>
                                            <td>{{reponse.titre}}</td>
                                            <td>{{reponse.score}}</td>
                                            <td><a href={{ path("reponse_up", {id:reponse.id, sondage:sondage.id}) }}><button class="btn btn-primary">Choisir</button></a></td>
                                        </tr>
                                    {% endif %}
                                {% endfor %}
                            {% endfor %}
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}